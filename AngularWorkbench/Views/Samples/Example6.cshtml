
@{
    ViewBag.Title = "Example6";
}


<div class="row" style="margin-top:20px;" ng-app="sampleApp">
    <div class="col-lg-12" ng-controller="NameController as nameCtrl">
        <div>
            <ul>
                <li ng-repeat="hero in heroes">{{hero}}</li>
            </ul>
        </div>
    </div>
</div>


@section headscripts
{
    <script>
        angular.module('sampleApp', [])
            .controller('NameController', function ($scope) {

                $scope.heroes = ['Supernman', 'Batman', 'Green Lantern', 'Captain Marvel', 'Wolverine'];
            });
    </script>

}
